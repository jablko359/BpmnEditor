<dnd:DragableUserControl x:Class="BPMNEditor.Views.BaseElementView"
             xmlns:dnd="clr-namespace:BPMNEditor.Tools.DragAndDrop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BPMNEditor.Views"
             xmlns:viewModels="clr-namespace:BPMNEditor.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ContentControl Content="{Binding}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewModels:EventViewModel}" >
                <Ellipse Height="{Binding Height}" Width="{Binding Width}" StrokeThickness="1" Stroke="Green" Fill="LawnGreen" >
                </Ellipse>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:TaskViewModel}" >
                <Border Height="{Binding Height}" Width="{Binding Width}" BorderBrush="DodgerBlue"  BorderThickness="1" CornerRadius="3" Background="DeepSkyBlue" ></Border>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:GatewayViewModel}" >
                <Border  Height="{Binding Height}" Width="{Binding Width}" BorderBrush="Goldenrod" BorderThickness="1" Background="Yellow" >
                    <Border.LayoutTransform>
                        <RotateTransform Angle="45" CenterX="0.5" CenterY="0.5"></RotateTransform>
                    </Border.LayoutTransform>
                </Border>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</dnd:DragableUserControl>
